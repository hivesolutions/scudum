if [ ! -e /etc/scudum/RUNNING ]; then
    case "$SCUDUM_ARCH" in
        arm)
            export CC="$ARCH_TARGET-gcc"
            export CXX="$ARCH_TARGET-g++"
            export AR="$ARCH_TARGET-ar"
            export RANLIB="$ARCH_TARGET-ranlib"
            export LD="$ARCH_TARGET-ld"
            ;;
    esac
else
    case "$SCUDUM_ARCH" in
        arm)
            export CFLAGS="-march=armv6zk -mcpu=arm1176jzf-s -mtune=arm1176jzf-s -mfloat-abi=hard"
            export CXXFLAGS="-march=armv6zk -mcpu=arm1176jzf-s -mtune=arm1176jzf-s -mfloat-abi=hard"
            ;;
    esac
fi
