#!/bin/bash
# -*- coding: utf-8 -*-

TARGET=/opt

set -e +h

mkdir -p $TARGET && cd $TARGET

if [ ! -e scudum ]; then
    git --depth 1 clone https://github.com/hivesolutions/scudum.git
    cd scudum
else
    cd scudum && git pull
fi

for package in "$@"; do
    if [ ! -e scripts/build/extras/$package.sh ]; then
        echo "No valid package found for name '$package'"
        exit 1
    fi

    scripts/build/extras/$package.sh
done
