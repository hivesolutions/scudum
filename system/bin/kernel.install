#!/bin/bash
# -*- coding: utf-8 -*-

NAME=${NAME-kernel}
VERSION=${VERSION-latest}
REBUILD=${REBUILD-0}
REPO=${REPO-http://hole1.hive:9090/builds/$NAME}

if [ "$REBUILD" == "1" ]; then
    kernel.build
    exit $?
fi

echo "kernel.install: deploying kernel files"

wget "$REPO/$NAME-$VERSION"

cp -v $NAME-$VERSION /boot/vmlinuz
cp -v $NAME-$VERSION /isolinux/vmlinuz
