#!/bin/bash
# -*- coding: utf-8 -*-

DEV=${DEV-${1-}}
TARGET=${TARGET-/pst}
LABEL=${LABEL-PSTSCU}
FS=${FS-ext4}

if [[ "$DEV" == "" ]]; then
    echo "Usage: scu persist <device>"
    exit 1
fi

if [ ! -e $DEV ]; then
    echo "scu: $DEV not found"
    exit 1
fi

echo "scu: creating persistence for $DEV using $FS"

mkfs.$FS $DEV
e2label $DEV "$LABEL"

mkdir -pv $TARGET
mount -v $DEV $TARGET

rm -rf $TARGET/lost+found
